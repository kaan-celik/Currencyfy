{
  "manifest_version": 3,
  "name": "Currencyfy",
  "version": "1.0",
  "description": "Track currency rates in a popup with chart and alert threshold.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
